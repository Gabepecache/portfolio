

<div class="container">
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Rails", root_path, class: "navbar-brand" %>
        
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <li>
              <% flash.each do |name, msg| %>
              <%= content_tag(:div, msg, class: "alert alert-#(info)") %>
              <% end %>
          </li>

          <% if (current_user.try(:admin?) || current_user.try(:email)  == "gabepecache@gmail.com")  %>
            <li><%= link_to "Admin", admin_path %></li>
          <% end %>
          
          <li><%= link_to "About", about_path %></li>

          <% if user_signed_in? %>
            <li><%= link_to raw('<span class="glyphicon glyphicon-plus"></span> New Pin'), new_pin_path %></li>

            <li><%= link_to "Account settings", edit_user_registration_path %></li>
            <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "Login", new_user_session_path %></li> 
            <li><%= link_to "Sign up", new_user_registration_path, class: "btn btn-default btn-lg" %> </li>
          <% end %>


        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
</div>