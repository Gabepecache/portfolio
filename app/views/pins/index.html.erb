<div class="panel panel-default">
  <div class="panel-heading">
    <h1>Listing pins</h1>
  </div>
  <div class="panel-body">

    <table style="border-collapse: separate; border-spacing: 20px 5px;">
      <thead>
        <tr>
          <th>Description</th>
          <th>email</th>
          <th>id</th>
          <th></th>
          <th></th>
          <th></th>

          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @pins.each do |pin| %>
          <tr>
            <td><%= pin.description %></td>
            <td><%= pin.user.email if pin.user %></td>
            <td><%= pin.id %></td>
            <td><%= link_to 'Show', pin, class: "btn btn-default" %></td>
            <% if pin.user == current_user %>
            <td><%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-default" %></td>
            <td><%= link_to 'Destroy', pin, method: :delete, class: "btn btn-default" %></td>
            <% end %>

          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <% if user_signed_in? %>
    <%= link_to 'New Pin', new_pin_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
